<resources>
    <!-- Base application theme. -->
    <style name="Theme.CollectibleCards" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marvel_500</item>
        <item name="colorPrimaryVariant">@color/marvel_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
    </style>

    <style name="Theme.CollectibleCards.Superheroes" parent="Theme.CollectibleCards">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marvel_500</item>
        <item name="colorPrimaryVariant">@color/marvel_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/marvel</item>
    </style>

    <style name="Theme.CollectibleCards.Animals" parent="Theme.CollectibleCards">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/animals_500</item>
        <item name="colorPrimaryVariant">@color/animals_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/magenta_100</item>
        <item name="colorSecondaryVariant">@color/magenta_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/arimo</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="subheaderColor">@color/navigation_item_color</item>
        <item name="itemBackground">@drawable/navigation_item_background</item>
    </style>

    <style name="Theme.CollectibleCards.Drawer.Header" parent="Theme.CollectibleCards">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CollectibleCards.Drawer.Header.Title" parent="Theme.CollectibleCards.Drawer.Header">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Theme.CollectibleCards.Drawer.Header.Subtitle" parent="Theme.CollectibleCards.Drawer.Header">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Theme.CollectibleCards.Drawer.Header.Profile" parent="Theme.CollectibleCards.Drawer.Header">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.CollectibleCards.Detail.Title" parent="Theme.CollectibleCards">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CollectibleCards.Detail.Chip" parent="Theme.CollectibleCards">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Theme.CollectibleCards.Detail.Body" parent="Theme.CollectibleCards">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CollectibleCards.Profile.Text" parent="Theme.CollectibleCards">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CollectibleCards.GridItem.Rarity" parent="Theme.CollectibleCards">
        <item name="android:background">@drawable/bg_rarity</item>
        <item name="android:elevation">@dimen/rarity_elevation</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CollectibleCards.GridItem.Title" parent="Theme.CollectibleCards">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CollectibleCards.ListItem.Title" parent="Theme.CollectibleCards">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CollectibleCards.ListItem.Subtitle" parent="Theme.CollectibleCards">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Theme.Profile.Icon" parent="Theme.CollectibleCards">
        <item name="android:tint">@color/black</item>
    </style>
</resources>

